threadlib := 
rtlib :=

remove = del

binary_name := Array_test.exe


#compiler flags
cf := /EHsc /W3 -I../../src
cf += /D"DEBUG"
cf += /D"WIN32"


default: $(binary_name)
	@echo running $^...
	@./$^

$(binary_name): Array_test.cpp 
	@echo Building $@...
	@cl $(cf) $(threadlib) $(rtlib) $<

clean:
	@$(remove) $(binary_name)
